class Solution {
    public boolean areAlmostEqual(String s1, String s2) {
        char[] a = s1.toCharArray();
        char[] b = s2.toCharArray();
        int [] c = new int[2];
        int tr=1;
        for(int i=0;i<a.length;i++){
            if(a[i]!=b[i]){
                if(tr>2){
                    return false;
                }
                c[tr-1]=i;
                tr++;
            }
                
        }
        if(a[c[0]]==b[c[1]] && a[c[1]]==b[c[0]])
            return true;
        else
            return false;
    }
}
