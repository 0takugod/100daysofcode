class Solution {
    public double findMedianSortedArrays(int[] nums1, int[] nums2) {
        int a[]=new int[nums1.length+nums2.length];
        int k=0;
        double ans;
        for(int i=0;i<nums1.length;i++){
            a[i]=nums1[i];
        }
        for(int i=nums1.length;i<a.length;i++){
            a[i]=nums2[k];
            k=k+1;
        }
        Arrays.sort(a);
        if(a.length%2==0){
            double m = ((a[(a.length/2)-1]+a[((a.length/2)+1)-1]));
            ans = m/2;
            
            
        }
        else{
            ans = a[((a.length+1)/2)-1];
            
        }
        return ans;
    }
}
